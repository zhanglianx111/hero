version: v1beta2
id: fluentd-to-elasticsearch
containers:
  - name: fluentd-es
    image: gcr.io/google_containers/fluentd-elasticsearch:1.3
    env:
      - name: FLUENTD_ARGS
        value: -qq
    volumeMounts:
      - name: containers
        mountPath: /var/lib/docker/containers
      - name: varlog
        mountPath: /varlog
volumes:
  - name: containers
    source:
      hostDir:
        path: /var/lib/docker/containers
  - name: varlog
    source:
      hostDir:
        path: /var/log
